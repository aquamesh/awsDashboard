// tsconfig.json
{
  "compilerOptions": {
    "noEmit": true, // For Vite
    // "outDir": "dist",
    // "rootDir": "src",
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "checkJs": false,
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "vite-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.vue",
  ],
  "exclude": [
    // "dist",
    "amplify/**/*",
    // ".amplify/**/*",
    "node_modules"
  ]
}