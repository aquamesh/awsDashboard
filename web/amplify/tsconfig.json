{
  "compilerOptions": {
    "composite": true, // ðŸ‘ˆ Required for project references
    "target": "ES2020",
    "module": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodenext",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "$amplify/*": ["../.amplify/generated/*"]
    }
  },
  "include": ["./**/*"]
}
